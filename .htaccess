RewriteEngine on

RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

RewriteBase /

RedirectMatch 403 /\.(bash|git|hg|log|svn|swp|tar)

ErrorDocument 403 /403.php
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

RewriteRule ^$ inner.php
RewriteRule ^(.+str=.*)$ inner.php?path=$1 [L]
RewriteRule ^([^\.]+)$ inner.php?path=$1 [QSA]

SetEnvIf Request_URI ^/concursresults/litra/index.php|^/concursresults/photo/index.php|^/concursresults/video/index.php require_auth=true
AuthUserFile /home/rushydro15/rushydro15.ru/www/.htpasswd
AuthName "Need Password"
AuthType Basic
Order Deny,Allow
Deny from all
Satisfy any
Require valid-user
Allow from env=!require_auth
